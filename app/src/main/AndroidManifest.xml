<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.adamapplock"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Optional (only if you plan to show a notification somewhere) -->
    <!-- <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> -->

    <!-- Let us see all apps that have a launcher activity -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Full-screen lock overlay (no intent-filter; launched by service) -->
        <activity
            android:name=".LockOverlayActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Accessibility service that detects foreground apps -->
        <service
            android:name=".AppLockAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>
</manifest>
